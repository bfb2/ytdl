{
  "manifest_version": 3,
  "name": "YouTube Downloader",
  "version": "1.0",
  "description": "Adds a download button to YouTube videos and playlists.",
  "permissions": ["scripting", "activeTab", "storage", "downloads","storage"],
  "host_permissions":["https://yt-downloader-backend-p1up.onrender.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
  
}
